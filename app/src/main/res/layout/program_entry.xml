<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/ProgramEntryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/ProgramNameView"
            android:layout_width="186dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/StartProgram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:clickable="true"
            android:contentDescription="@string/plays_program"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/ProgramNameView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="@string/delete"
            app:layout_constraintBottom_toBottomOf="@+id/ProgramNameView"
            app:layout_constraintEnd_toStartOf="@+id/StartProgram"
            app:layout_constraintStart_toEndOf="@+id/ProgramNameView"
            app:layout_constraintTop_toTopOf="@+id/ProgramNameView" />

    </LinearLayout>

</androidx.cardview.widget.CardView>